<?xml version="1.0"?>
<Worlds>
	
	<!-- Asteroids -->
	<!-- The first worls is passing throught a set of asteroids in three different scenes.
		 Every scene is more difficult that the previous one: More asteroids, quicker, and with more power -->
	<World id="50001">
	
		<Scenes>
			
			<!-- Starting the travel -->
			<Scene id="70000">
				<Actions>
				
					<!-- Blocks related with asteroids -->
					<!-- From 70000 to 70999 -->
					<!-- 70X00 to 70X99 World X (starting from 1) -->
					<!-- 70XY0 to 70XY9 World X, Scene Y with in World (starting from 0) -->
					<Action id="70100">
						<Attributes>
							<!-- In this first definition all attributes are explained
								 But not all are necessary. So, some of them are avoided in further definitions -->
							<Attribute id="TimeToAppear" value="0"/>
							<Attribute id="ProbabilityToAppear" value="100"/> <!-- Always -->
							<Attribute id="Emerge" value="NO"/> <!-- Default value, meaning not to appear little by little -->
							<Attribute id="TimeToMove" value="0"/> <!-- Default value. Inmediate -->
							<Attribute id="Regenerate" value="YES"/> <!-- Default value, meaning to start back when destroyed o exited the screen -->
							<Attribute id="Roll" value="NO"/> <!-- Default value, meaning not to appear in the other side of the screen when exited this one -->
							<!-- Initial position not defined, meaning random
								 depending the type of element and movement (in the top of the visual zone for asteroids -->
							<Attribute id="MaxTimeAction" value="-1"/> <!-- Default value, meaning no end -->
							<Attribute id="Type" value="-1"/> <!-- Default value, meaning random -->
							<Attribute id="MovType" value="0"/> <!-- Default value. No really used in this standard definition -->
							<Attribute id="PointsGiven" value="100"/> <!-- When destroyed -->
							<Attribute id="Speed" value="-3"/> <!-- Random up to 3 -->
							<!-- Anyway the speed of the element will be finally this one plus the speed of the screen, 
								 determined by the difficuly level -->
						</Attributes>
					</Action>
					
					<Action id="70101">
						<Attributes>
							<Attribute id="TimeToAppear" value="1"/>
							<Attribute id="ProbabilityToAppear" value="60"/> 
							<Attribute id="PointsGiven" value="100"/>
							<Attribute id="Speed" value="-3"/>
						</Attributes>
					</Action>
					
					<Action id="70102">
						<Attributes>
							<Attribute id="TimeToAppear" value="1"/>
							<Attribute id="ProbabilityToAppear" value="50"/> 
							<Attribute id="PointsGiven" value="100"/>
							<Attribute id="Speed" value="-3"/>
						</Attributes>
					</Action>

					<!-- A pill to load energy -->
					<!-- From 71000 to 71999 -->
					<!-- 71X00 to 71X99 World X (starting from 1) -->
					<!-- 71XY0 to 71XY9 World X, Scene Y (starting from 0) -->
					<Action id="71100">
						<Attributes>
							<!-- In this first definition all attributes are explained
								 But not all are necessary. So, some of them are avoided in further definitions -->
							<Attribute id="TimeToAppear" value="5"/> <!-- Every 5 seconds -->
							<Attribute id="ProbabilityToAppear" value="50"/> <!-- 40% probable to appear -->
							<Attribute id="Emerge" value="NO"/> <!-- Default value, meaning not to appear little by little -->
							<Attribute id="TimeToMove" value="0"/> <!-- Default value. Inmediate -->
							<Attribute id="Regenerate" value="YES"/> <!-- Default value, After passed another one is generated -->
							<Attribute id="Roll" value="NO"/> <!-- Default value, meaning not to appear in the other side of the screen when exited this one -->
							<!-- Initial position not defined, meaning random
								 depending the type of element and movement (in the top of the visual zone for asteroids -->
							<Attribute id="MaxTimeAction" value="-1"/> <!-- Default value, meaning no end -->
							<Attribute id="Type" value="0"/> <!-- The standard definition includes only one type -->
							<Attribute id="MovType" value="0"/> <!-- Default value. No really used in this standard definition -->
							<Attribute id="EnergyAdded" value="50"/> <!-- 50% more loaded (up to 100 fully loaded" -->
							<Attribute id="Speed" value="1"/> <!-- Slow to facilitate to pick it up -->
						</Attributes>
					</Action>
					
					<!-- A shooting pill -->
					<!-- From 72000 to 72999 -->
					<!-- 72X00 to 72X99 World X (starting from 1) -->-
					<!-- 72XY0 to 72XY9 World X, Scene Y (starting from 0) -->
					<Action id="72100">
						<Attributes>
							<!-- In this first definition all attributes are explained
								 But not all are necessary. So, some of them are avoided in further definitions -->
							<Attribute id="TimeToAppear" value="6"/> <!-- Every 6 seconds -->
							<Attribute id="ProbabilityToAppear" value="50"/> <!-- In this level more probable to appear -->
							<Attribute id="Emerge" value="NO"/> <!-- Default value, meaning not to appear little by little -->
							<Attribute id="TimeToMove" value="0"/> <!-- Default value. Inmediate -->
							<Attribute id="Regenerate" value="YES"/> <!-- Default value, After passed another one is generated -->
							<Attribute id="Roll" value="NO"/> <!-- Default value, meaning not to appear in the other side of the screen when exited this one -->
							<!-- Initial position not defined, meaning random
								 depending the type of element and movement (in the top of the visual zone for asteroids -->
							<Attribute id="Type" value="0"/> <!-- The standard definition includes only one type -->
							<Attribute id="MovType" value="0"/> <!-- Default value. No really used in the standard definition. -->
							<Attribute id="TypeShooting" value="-2"/> <!-- Meaning the next level of the current one -->
							<Attribute id="Speed" value="1"/> <!-- Again slow -->
						</Attributes>
					</Action>
				</Actions>
				
				<Attributes>
					<Attribute id="NAME" value="Starting"/>
					<Attribute id="MOVEMENT" value="1,1,0"/> 
					<Attribute id="BACKGROUNDMUSIC" value="50001"/> 
					<Attribute id="SCENETIME" value="60"/> <!-- 1 minute to fight -->
				</Attributes>
				
				<Conexions>
