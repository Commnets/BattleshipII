<?xml version="1.0"?>
<Entities>
	
	<!-- The new definition of the UFOs 
		 This definition rewrites the one defined in bsentities.xml -->
	<SetOfEntities fromId="56000" number="50">
		<Forms>
			<!-- Different UFO forms -->
			<!-- UFO 1 -->
			<Form id="50800"/>
			<!-- UFO 2 -->
			<Form id="50801"/>
			<!-- UFO 3 -->
			<Form id="50802"/>
			
<!-- ADDED FOR BATTLESHIPII -->
			
			<!-- UFO 4 -->
			<Form id="60100"/>
			<!-- UFO 5 -->
			<Form id="60101"/>
			
<!-- ADDED FOR BATTLESHIPII -->

			<!-- Little Explosion-->
			<Form id="50101"/>
		</Forms>
		<MovementsBase>
			<!-- Moving -->
			<Movement id="56000"/>
			<!-- Staying -->
			<Movement id="56100"/>
		</MovementsBase>
		<Animations>
			<!-- Type of UFO 1 -->
			<Animation id="0" type="0">
				<Attributes>
					<Attribute id="FORM" value="50800"/>
					<Attribute id="INITIALASPECT" value="0"/>
					<Attribute id="FINALASPECT" value="6"/>
					<Attribute id="FRACTIONTOCHANGE" value="2"/>
					<Attribute id="LOOP" value="1"/>
					<!-- Not linked with anyone -->
				</Attributes>
			</Animation>
			<!-- Type of UFO 2 -->
			<Animation id="1" type="0">
				<Attributes>
					<Attribute id="FORM" value="50801"/>
					<Attribute id="INITIALASPECT" value="0"/>
					<Attribute id="FINALASPECT" value="6"/>
					<Attribute id="FRACTIONTOCHANGE" value="2"/>
					<Attribute id="LOOP" value="1"/>
					<!-- Not linked with anyone -->
				</Attributes>
			</Animation>
			<!-- Type of UFO 3 -->
			<Animation id="2" type="0">
				<Attributes>
					<Attribute id="FORM" value="50802"/>
					<Attribute id="INITIALASPECT" value="0"/>
					<Attribute id="FINALASPECT" value="4"/>
					<Attribute id="FRACTIONTOCHANGE" value="2"/>
					<Attribute id="LOOP" value="1"/>
					<!-- Not linked with anyone -->
				</Attributes>
			</Animation>
			<!-- When the UFO is exploding -->
			<Animation id="3" type="0">
				<Attributes>
					<Attribute id="FORM" value="50101"/>
					<Attribute id="INITIALASPECT" value="0"/>
					<Attribute id="FINALASPECT" value="25"/>
					<Attribute id="FRACTIONTOCHANGE" value="4"/>
					<Attribute id="LOOP" value="0"/>
					<!-- Not linked with anyone -->
				</Attributes>
			</Animation>
			<!-- No animation when it has been destroyed -->
			<Animation id="4" type="-1"/>

<!-- ADDED FOR BATTLESHIPII -->

			<!-- Type of UFO 4 -->
			<Animation id="5" type="0">
				<Attributes>
					<Attribute id="FORM" value="60100"/>
					<Attribute id="INITIALASPECT" value="0"/>
					<Attribute id="FINALASPECT" value="6"/>
					<Attribute id="FRACTIONTOCHANGE" value="2"/>
					<Attribute id="LOOP" value="1"/>
					<!-- Not linked with anyone -->
				</Attributes>
			</Animation>
			<!-- Type of UFO 5 -->
			<Animation id="6" type="0">
				<Attributes>
					<Attribute id="FORM" value="60101"/>
					<Attribute id="INITIALASPECT" value="0"/>
					<Attribute id="FINALASPECT" value="6"/>
					<Attribute id="FRACTIONTOCHANGE" value="2"/>
					<Attribute id="LOOP" value="1"/>
					<!-- Not linked with anyone -->
				</Attributes>
			</Animation>

<!-- ADDED FOR BATTLESHIPII -->

		</Animations>
		<States>
			<!-- Note tha none of the movements define the direction.
				 It is defined by the block the UFO is contained in, through the parameter "TypeMovement" -->
			<!-- Freeze UFO 1 -->
			<State id="0" animation="0" movementBase="56100"/>
			<!-- Moving UFO 1 -->
			<State id="1" animation="0" movementBase="56000"/>
			<!-- Freeze UFO 2 -->
			<State id="2" animation="1" movementBase="56100"/>
			<!-- Moving UFO 2 -->
			<State id="3" animation="1" movementBase="56000"/>
			<!-- Freeze UFO 3 -->
			<State id="4" animation="2" movementBase="56100"/>
			<!-- Moving UFO 3 -->
			<State id="5" animation="2" movementBase="56000"/>

<!-- ADDED FOR BATTLESHIPII -->

			<!-- Freeze UFO 4 -->
			<State id="6" animation="5" movementBase="56100"/>
			<!-- Moving UFO 4 -->
			<State id="7" animation="5" movementBase="56000"/>
			<!-- Freeze UFO 5 -->
			<State id="8" animation="6" movementBase="56100"/>
